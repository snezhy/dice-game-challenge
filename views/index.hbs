<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
   
    <div class="wrapper clearfix">
        <div class="player-one-panel active">
            <div class="player-name" id="name-player-one">Player 1</div>
            <div class="player-score" id="score-player-one">0</div>
            <div class="player-current-box">
                <div class="player-current-label">Current</div>
                <div class="player-current-score" id="current-score-player-one">0</div>
            </div>
        </div> 

        <div class="player-two-panel">
            <div class="player-name" id="name-player-two">Player 2</div>
            <div class="player-score" id="score-player-two">0</div>
            <div class="player-current-box">
                <div class="player-current-label">Current</div>
                <div class="player-current-score" id="current-score-player-two">0</div>
            </div>
        </div>

        <button class="btn-new-game">
            <i class="ion-ios-plus-outline"></i>New game
        </button>
        <form>
            <img id="diceOne" src={{ diceOne }} />
            <input id="txt_input" type="text" value={{ diceOne }} />
            <img id="diceTwo"  src={{ diceTwo }} />
            <button id="btn-roll-dice"  class="btn-roll"> Roll Dice </button>
        </form>
        <button class="btn-stop-rolling">
            <i class="ion-ios-download-outline"></i>Stop
        </button>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/js/app.js"></script>
</body>

</html>